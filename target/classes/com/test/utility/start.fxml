<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.test.controller.StartController"
          prefHeight="400.0" prefWidth="400.0"
          alignment="CENTER"
          hgap="10"
          vgap="10"
        >
    <padding>
        <Insets topRightBottomLeft="25"/>
    </padding>
    <Label GridPane.columnSpan="2" fx:id="WelcomeLabel" text="Witaj w aplikacji do generowania testów"
            GridPane.columnIndex="0" GridPane.rowIndex="0"
    />
    <Button prefWidth="300"  text="Utwórz nowy test" fx:id="CreateNewTest" onAction="#onCreateNewTest" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <Button prefWidth="300" text="Otwórz istniejący test" fx:id="OpenExistingTest" onAction="#onOpenExsistingTest" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

</GridPane>
